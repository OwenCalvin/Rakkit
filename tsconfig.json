{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [
      "dom",
      "es7",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@logic": ["src/logic/index"],
      "@types": ["src/types/index"],
      "@decorators": ["src/decorators/index"],
      "@misc": ["src/misc/index"],
      "@api/*": ["app/api/*"],
      "@modules/*": ["src/modules/*"],
      "@app/*": ["app/*"],
      "@main": ["src/Main"],
      "@config": ["RakkitConfig"],
      "@root": ["."],
      "rakkitql": ["src/modules/rakkitql/src/index"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
